<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.acme.javafx.controllers.HomeViewController">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="My Account">
            <items>
              <MenuItem mnemonicParsing="false" text="Historic" />
                  <MenuItem mnemonicParsing="false" text="Create Transaction" />
                  <MenuItem mnemonicParsing="false" text="Update Account" />
                  <MenuItem mnemonicParsing="false" text="Delete Account" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Addresses">
            <items>
              <MenuItem mnemonicParsing="false" text="Create Address" />
                  <MenuItem mnemonicParsing="false" text="Update Address" />
                  <MenuItem mnemonicParsing="false" text="Delete Address" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Theme">
               <items>
                  <MenuItem mnemonicParsing="false" text="Dark" />
                  <MenuItem mnemonicParsing="false" text="Light" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="System">
               <items>
                  <MenuItem fx:id="systemExitMenuItem" mnemonicParsing="false" onAction="#onSystemExitMenuItemAction" text="Exit" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
